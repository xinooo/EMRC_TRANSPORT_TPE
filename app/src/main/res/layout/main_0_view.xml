<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        tools:ignore="UseCompoundDrawables" >

        <ImageView
            android:id="@+id/print_background"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/bg_emrc_zh"
            tools:ignore="ContentDescription" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        tools:ignore="UseCompoundDrawables,RtlHardcoded" >

        <TextView
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:background="@color/gone"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/print_tv_0_green"
            android:layout_width="120dp"
            android:layout_height="46dp"
            android:layout_marginBottom="17dp"
            android:background="@color/gone"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/print_tv_1_black"
            android:layout_width="120dp"
            android:layout_height="46dp"
            android:layout_marginBottom="17dp"
            android:background="@color/gone"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/print_tv_2_red"
            android:layout_width="120dp"
            android:layout_height="46dp"
            android:layout_marginBottom="17dp"
            android:background="@color/gone"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/print_tv_3_red"
            android:layout_width="120dp"
            android:layout_height="46dp"
            android:background="@color/gone"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/print_tv_4_red"
            android:layout_width="120dp"
            android:layout_height="46dp"
            android:layout_marginTop="15dp"
            android:background="@color/gone"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/print_tv_5_red"
            android:layout_width="120dp"
            android:layout_height="46dp"
            android:layout_marginTop="15dp"
            android:background="@color/gone"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/print_tv_6_gold"
            android:layout_width="120dp"
            android:layout_height="46dp"
            android:layout_marginTop="15dp"
            android:background="@color/gone"
            tools:ignore="RtlHardcoded" />
    </LinearLayout>

    <TextView
        android:id="@+id/main_no_print"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:text="@string/id_000004"
        android:textColor="@color/red"
        android:textSize="20sp"
        tools:ignore="RtlHardcoded" />

    <Button
        android:id="@+id/print_log"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/white_gone"
        android:text="NFC裝置不可使用!"
        android:textSize="26sp"
        android:visibility="gone"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="10dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="1dp"
        android:drawableRight="@drawable/gray_baseline3"
        tools:ignore="RtlHardcoded" />

</RelativeLayout>